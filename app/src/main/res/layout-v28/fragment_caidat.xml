<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131428"
    android:paddingHorizontal="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAnhNguoiDung"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/txtTenHienThi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAnhNguoiDung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="No Username"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTenHienThi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="No Email"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/ivDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="24dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/txtDoiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDivider"
        android:layout_marginTop="16dp"
        android:text="Đổi mật khẩu"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDoiAnhDaiDien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDoiMatKhau"
        android:layout_marginTop="16dp"
        android:text="Đổi ảnh đại diện"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDoiAnhDaiDien"
        android:layout_marginTop="16dp"
        android:text="Đăng Xuất"
        android:textColor="@android:color/white"
        android:textSize="24sp" />
</RelativeLayout>