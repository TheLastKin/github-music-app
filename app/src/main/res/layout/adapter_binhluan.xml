<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingHorizontal="4dp"
    android:layout_marginBottom="12dp"
    android:paddingTop="4dp"
    android:background="@color/DarkTheme">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatarNguoiDung"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/txtTenNguoiDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Nhật"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ivAvatarNguoiDung"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txtBinhLuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAvatarNguoiDung"
        android:layout_marginLeft="40dp"
        android:text="No text"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/ivTuyChinhBinhLuan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more"
        android:visibility="invisible"
        android:clickable="false"
        android:focusable="false"/>
</RelativeLayout>