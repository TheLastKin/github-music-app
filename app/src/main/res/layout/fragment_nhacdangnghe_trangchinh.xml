<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/fragment_nhacdangnghe_background" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivNhacDangNgheIcon"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/black_rounded_background"
        android:scaleType="centerCrop"
        android:src="@drawable/dj" />

    <TextView
        android:id="@+id/txtTenNhac"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivNhacDangNgheIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="No Data"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTenNgheSi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTenNhac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="No Data"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</RelativeLayout>